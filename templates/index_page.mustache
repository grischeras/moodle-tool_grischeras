  {{!
    @template tool_grischeras/index_page

    Moodle list template.

    The purpose of this template is to render a list.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * attributes Array of name / value pairs.

    Example context (json):
    {
        "sometext": "string",
        "courseinfos":{
          "coursename": "string",
          "isended": "boolean",
          "infos": {
                "id": "integer",
                "name": "string"
            }
          }
    }
  }}

<div class="container-fluid">
    <div class="info-box">
        <h3>{{sometext}}</h3>
        <p><strong>{{courseinfos.coursename}}:</strong>
            {{#courseinfos.isended}}
                <span style="color: red">Course is ended!</span>
            {{/courseinfos.isended}}
            {{^courseinfos.isended}}
                <span style="color: green">Course is in progress!</span>
            {{/courseinfos.isended}}
        </p>
    </div>
    {{#courseinfos.infos}}
        <div class="objects-container">
            {{#data}}
                <div class="list-details">
                    <p><span>record key:</span> {{ key }}</p>
                    <p><span>record value:</span> {{value}}</p>
                </div>

            {{/data}}
            <div class="item-actions">
                {{#actions}}
                    <a href="{{url}}" class="btn {{class}}">
                        {{type}}
                    </a>
                {{/actions}}
            </div>
        </div>
    {{/courseinfos.infos}}
</div>
